Create database:

CREATE DATABASE ev_charging;
USE ev_charging;

Step 2: Create Tables

users

CREATE TABLE users (
 id INT AUTO_INCREMENT PRIMARY KEY,
 name VARCHAR(100),
 email VARCHAR(100) UNIQUE,
 password VARCHAR(255),
 role ENUM('user','staff','worker','admin'),
 phone VARCHAR(15)
);


stations

CREATE TABLE stations (
 id INT AUTO_INCREMENT PRIMARY KEY,
 name VARCHAR(100),
 location VARCHAR(255),
 total_slots INT,
 available_slots INT,
 staff_id INT
);


slots

CREATE TABLE slots (
 id INT AUTO_INCREMENT PRIMARY KEY,
 station_id INT,
 slot_time VARCHAR(50),
 status ENUM('available','booked')
);


bookings

CREATE TABLE bookings (
 id INT AUTO_INCREMENT PRIMARY KEY,
 user_id INT,
 station_id INT,
 slot_id INT,
 booking_date DATE,
 status ENUM('pending','approved','rejected'),
 qr_code TEXT
);


complaints

CREATE TABLE complaints (
 id INT AUTO_INCREMENT PRIMARY KEY,
 user_id INT,
 message TEXT,
 status VARCHAR(50)
);
